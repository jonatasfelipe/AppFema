<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    android:gravity="center"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp">


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        tools:ignore="UselessParent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            tools:ignore="ScrollViewSize">

            <ImageButton
                android:id="@+id/btnnota"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:adjustViewBounds="true"
                android:background="@null"
                android:src="@drawable/notas"
                android:text="NOTAS E FALTAS"
                tools:ignore="ContentDescription,HardcodedText,RtlHardcoded" />

            <ImageButton
                android:id="@+id/btnhorarios"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_below="@+id/btninformacao"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:adjustViewBounds="true"
                android:background="@null"
                android:src="@drawable/horarios"
                android:text="Horário das Aulas"
                tools:ignore="ContentDescription,HardcodedText,RtlHardcoded" />

            <ImageButton
                android:id="@+id/btninformacao"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_alignLeft="@+id/btnnota"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/btnhorarios"
                android:adjustViewBounds="true"
                android:background="@null"
                android:src="@drawable/informacao"
                android:text="INFORMAÇÕES PESSOAIS"
                tools:ignore="ContentDescription,HardcodedText,RtlHardcoded" />

            <ImageButton
                android:id="@+id/btnmonografia"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:adjustViewBounds="true"
                android:background="@null"
                android:src="@drawable/monografia"
                android:text="MONOGRAFIA"
                tools:ignore="ContentDescription,HardcodedText,RtlHardcoded"
                android:layout_below="@+id/btnboletos"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <ImageButton
                android:id="@+id/btnboletos"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:adjustViewBounds="true"
                android:background="@null"
                android:src="@drawable/boletos"
                android:text="BOLETOS"
                tools:ignore="ContentDescription,HardcodedText,RtlHardcoded"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <ImageButton
                android:id="@+id/btncontratos"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_below="@+id/btnDependencia"
                android:adjustViewBounds="true"
                android:background="@null"
                android:src="@drawable/contratos"
                android:text="CONTRATOS"
                tools:ignore="ContentDescription,HardcodedText,RtlHardcoded" />

            <ImageButton
                android:id="@+id/btnDependencia"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_below="@+id/btnnota"
                android:adjustViewBounds="true"
                android:background="@null"
                android:src="@drawable/dp"
                android:text="DISCIPLINAS DEPENDÊNCIA"
                tools:ignore="ContentDescription,HardcodedText,RtlHardcoded" />



        </RelativeLayout>
    </ScrollView>

</RelativeLayout>

